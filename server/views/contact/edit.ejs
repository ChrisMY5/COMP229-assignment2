<%- include('../components/head.ejs'); %>

<%- include('../components/header.ejs'); %>


<!-- Contents for the Edit page-->
<!-- Final view page of data editting -->
<div class="container"><br>
    <div class="row">
        <div class="col-md-5 offset-md-3">
            <h1><%= title %></h1>
            <form class="form" method="post">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control" 
                    id="nameTextField"
                    placeholder="Enter the Full Name"
                    name="name"
                    value="<%= contact.name %>"
                    required>
                </div>
                <br>
                <div class="form-group">
                    <label for="numberTextField">Phone Number</label>
                    <input type="text" class="form-control" 
                    id="numberTextField"
                    placeholder="Enter the Contact Phone Number"
                    name="number"
                    value="<%= contact.number %>"
                    required>
                </div>
                <br>
                <div class="form-group">
                    <label for="emailTextField">Email Address</label>
                    <input type="text" class="form-control" 
                    id="emailTextField"
                    placeholder="Enter the Email Address"
                    name="email"
                    value="<%= contact.email %>"
                    required>
                </div>
                <br>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i>   Edit</button>

                    <a href="/business-contact" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>
            </form>
        </div>
    </div>
</div>





<%- include('../components/footer.ejs'); %>


